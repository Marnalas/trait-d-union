<OffresFilter @offres={{this.offres}} @results={{this.results}} as |filteredOffres|>
  <ul>
    {{#animated-each filteredOffres use=transition as |offre|}}
      <Offre @offre={{offre}}></Offre>
    {{else}}
      Aucune offre disponible pour le moment. Revenez demain !
    {{/animated-each}}
  </ul>
</OffresFilter>