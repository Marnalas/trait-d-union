<div class="offres-filter row justify-content-center mb-4">
  <div class="row border justify-content-center offres-filter-rounded mb-5">
    🔍
    {{input
      value=this.keyword
      key-up=(action "filterByKeyword")
      class="light no-border text-secondary"
      placeholder="Filtrer par mot-clé"
      size="30"
    }}
  </div>
  <div class="col-12">
    {{yield this.results}}
  </div>
</div>

